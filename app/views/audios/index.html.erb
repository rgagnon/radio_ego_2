<%- model_class = Audio -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:mp3_file_name) %></th>
      <th><%= model_class.human_attribute_name(:mp3_content_type) %></th>
      <th><%= model_class.human_attribute_name(:mp3_file_size) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @audios.each do |audio| %>
      <tr>
        <td><%= link_to audio.title, audio_path(audio) %></td>
        <td><%= audio.mp3_file_name %></td>
        <td><%= audio.mp3_content_type %></td>
        <td><%= audio.mp3_file_size %></td>
        <td><%=l audio.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_audio_path(audio), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      audio_path(audio),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_audio_path,
            :class => 'btn btn-primary' %>
